{
  "name": "myBibleToolbox Development",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "remoteUser": "devuser",
  "mounts": [
    "source=${localEnv:HOME}/projects/ebible,target=/ebible,type=bind,readonly"
  ],
  "containerEnv": {
    "DATA_DIR": "/workspace/.data",
    "EBIBLE_DIR": "/ebible"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
      ]
    }
  }
}

