# Environment variables for myBibleToolbox development
# Copy this file to .envrc and customize paths as needed
# If using direnv: direnv allow

# Data directory for commentary, strongs, and cached data
# Default: .data (sparse checkout of mybibletoolbox-data repo)
export DATA_DIR="${PWD}/.data"

# eBible corpus directory (1000+ Bible translations)
# Clone from: https://github.com/BibleNLP/ebible
# Recommended location: ~/projects/ebible
export EBIBLE_DIR="${HOME}/projects/ebible"

# Optional: Python virtual environment
# export VIRTUAL_ENV="${PWD}/.venv"
# export PATH="${VIRTUAL_ENV}/bin:${PATH}"

